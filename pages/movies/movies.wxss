@import "movie-list/movie-list.wxss";
@import "movie-group/movie-group.wxss";

.search {
  display: flex;
  flex-direction: row;
  position: relative;
  width: 100%;
  height: 80rpx;
  background-color: #f2f2f2;
}

.search-image {
  margin: auto 0 auto 20rpx;
}

.search input {
  height: 100%;
  width: 600rpx;
  margin-left: 20px;
  font-size: 28rpx;
}

.placeholder {
  margin-left: 20rpx;
  color: #d1d1d1;
  font-size: 14px;
}

.clear-image {
  position: absolute;
  top: 24rpx;
  right: 20rpx;
}

.search-panel {
  position: absolute;
  top: 80rpx;
}

.container {
  background-color: #f1efef;
}

.movies-template {
  margin-bottom: 30rpx;
}
