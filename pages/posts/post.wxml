<import src="posts-item/post-item-template.wxml" />
<view>
  <swiper indicator-dots="true" autoplay="ture" indicator-active-color="rgba(246,248,249,.7)" circular="true">
    <swiper-item>
      <image src='/images/wx.png'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/vr.png'></image>
    </swiper-item>
    <swiper-item>
      <image src='/images/iqiyi.png'></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{postList}}" wx:key="unique" wx:for-item="item">
    <view catchtap="onPostTap" data-postId='{{item.postId}}'>
      <template is="post-item" data="{{...item}}" />
    </view>
  </block>
</view>